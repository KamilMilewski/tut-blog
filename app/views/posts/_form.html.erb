<%= form_for @post do |f| %>

	<% if @post.errors.any? %>
		<div>
		<p>
			<%= pluralize @post.errors.count, 'error' %>
			prevented this post from being saved.
		</p>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>