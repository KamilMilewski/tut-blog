<p>
	<strong>Title: </strong>
	<%= @post.title %>
</p>

<p>
	<strong>Content: </strong>
	<%= @post.text %>
</p>

<p>
	<%= link_to 'edit', edit_post_path(@post) %>
	<%= link_to 'delete', post_path(@post),
				method: :delete,
				data: {confirm: 'Are you sure?'} %>
</p>

<h2>Comments:</h2>
<%= render @post.comments %>


<h2>Add a comment:</h2>
<%= render 'comments/form' %>